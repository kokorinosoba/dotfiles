#!/usr/bin/env bash

# Multifile Compile and Execute Shell
# chmod +x eatで実行権限を与える
# ./eatで実行可能

set -eu

usage() {
  echo "Usage: ${0##*/} [-f --force] file"                 1>&2
  echo "Avairable file extensions are [.c .cpp .cs .java]" 1>&2
  exit 1
}

force=false

declare -i argc=0
declare -a argv=()

while (( $# > 0 ))
do
  case $1 in
    -* )
      if [[ $1 == "-f" || $1 == "--force" ]]; then
        force=true
      else
        usage
      fi
      shift ;;
    * )
      argv+=($1) # argv=("${argv[@]}" "$1")
      argc+=1 # ((++argc))
      shift ;;
  esac
done

if [[ $argc -lt 1 ]]; then
  echo "No input file" 1>&2
  usage
elif [[ $argc -gt 1 ]]; then
  echo "Too many files" 1>&2
  usage
fi

if $force; then
  opt=-f
fi

case ${argv##*.} in
  cpp )
    calpis $opt $argv ;;
  cs )
    cassis $opt $argv ;;
  c )
    coke $opt $argv ;;
  java )
    juice $opt $argv ;;
  * )
    if ! [[ -e $argv ]]; then
      echo "$argv does not exist"
    else
      echo "Unrecognized $(if [[ $argv != ${argv##*.} ]]; then echo "extension "; fi)file"
    fi
    usage
esac
