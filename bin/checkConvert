#!/usr/bin/env bash

cd "$(dirname $0)"

function isImage() {
  [[ "$(file "$1")" =~ .*image\ data.* ]]
}

echo -e "検索対象のフォルダ: \033[34m$(pwd)\033[0m"
read -p "変換された可能性のあるファイルを検索します。[Y/n]: " answer

case "$answer" in
  "Y" | "y" | "yes" | "Yes" | "YES" ) ;;
  * )
    read -p "Canceled. Press any key to continue..."
    exit 1 ;;
esac

find . -type f | while read file
do
  if isImage "$file"; then
    echo "$file" | tee -a checkConvertResult.txt
  fi
done

echo "検索が完了しました。検索結果の出力先: $(dirname $0)/checkConvertResult.txt"
read -p "何かキーを押してください..."
